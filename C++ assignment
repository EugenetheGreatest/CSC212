#include <iostream>
using namespace std;
int main()
{
float num1, num2;
char x;
cout<<"Enter first number: ";
cin>>num1;
cout<<"Enter second number: ";
cin>>num2;
cout<<"\nPress 1 for Subtraction";
cout<<"\nPress 2 for Division";
cout<<"\nPress 3 for Addition";
cout<<"\nPress 4 for Multiplication"<<endl;
cout<<"\nEnter your Operation from the choices above: ";
cin>>x;


if (x=='1'){
cout<<"\nThe difference is: "<<num1-num2;}
else if (x=='2'){
if (num1>num2){
cout<<"\nThe quotient is: "<<num1/num2;}
else{
cout<<"\nSorry, the dividend must be greater than the divisor!";}
}
else if (x=='3'){
cout<<"\nThe sum is: "<<num1+num2;}
else if (x=='4'){
cout<<"\nThe product is: "<<num1*num2;}
else{
cout<<"ERROR INPUT!!!"<<endl;}


	return 0;

}
