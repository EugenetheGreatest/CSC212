#include<iostream>
using namespace std;

int main(){
cout<<"PATTERN 1"<<endl;
int rows;
cout<<"Enter no. of rows: ";
cin>>rows;
for (int a=1 ; a<=rows; a++)
{
	for (int b=1; b<=a; b++)
	 {
	 cout<<" *";	
	}
cout<<"\n";
}

cout<<"PATTERN 2"<<endl;
cout<<"Enter no. of rows: ";
cin>>rows;
for (int a=0 ; a<rows; a++)
{
	for (int b=0; b<rows; b++)
	if(a==0 || a==rows-1 || b==0 || b==rows-1)
	 {
	 cout<<"*";	
	}
	else{
		cout<<" ";
	}
cout<<endl;
}
cout<<"PATTERN 3"<<endl;
cout<<"Enter no. of rows: ";
cin>>rows;
for(int a = 1; a<= rows; a++)
   {
      for(int c=a; c<rows; c++)
      {
         cout<<" ";
      }
      for(int b=1; b<=(2*a-1); b++)
      {
         cout <<"*";
      }
      cout <<"\n";
   }
cout<<"PATTERN 4"<<endl;
cout<<"Enter no. of rows: ";
cin>>rows;
for (int a=1 ;a<=rows; a++){
	 for(int b=1; b<=a; b++)
{
cout<<a*b<<" ";
}
cout<<"\n";
}

return 0;
}
